<html>
  <head>
    <title>nDeploy
    </title>
  </head>
  <body>
    <a href="ndeploy.live.cgi"><img border="0" src="nDeploy.png" alt="nDeploy"></a><HR>
    <p style="background-color:LightGrey">CONFIGURE: {{ DOMAIN }}</p>
    <p style="background-color:LightGrey">You are currently using <b>{{ BACKEND_CATEGORY }}</b> as backend and <b>{{ BACKEND_VERSION }}</b> as version/type</p>
    <HR>
    {% if CUSTOMCONF == '0' %}
    <form action="autoconfig2.live.cgi" method="post">
      <select name="backend" size="5">
      {% for key in BACKENDS %}<option value="{{ key }}"{% if key == BACKEND_CATEGORY %} selected{% endif %}>{{ key }}</option>{% endfor %}
      </select>
      <HR>
      <input style="display:none" name="domain" value="{{ DOMAIN }}">
      <input type="submit" value="PROCEED">
    </form>
    {% else %}
    <textarea name="textcontent" cols="120" rows="50">{{ CONF_CONTENT }}</textarea><HR>
    {% endif %}
  </body>
</html>
