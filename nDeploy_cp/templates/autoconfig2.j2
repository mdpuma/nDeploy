<html>
<head>
<title>nDeploy</title>
</head>
<body>
  <a href="ndeploy.live.cgi"><img border="0" src="nDeploy.png" alt="nDeploy"></a>
  <HR>
  <p style="background-color:LightGrey">CONFIGURE: {{ DOMAIN }}</p>
  <HR>
  <form action="update.live.cgi" method="post">
    <p style="background-color:LightGrey">Select backend version: </p>
    <select name="version" size="5">
      {% for key, value in BACKENDS.iteritems() %}<option value="{{ key }}">{{ key }}</option>{% endfor %}
    </select>
    <HR>
    <p style="background-color:LightGrey">Select a configuration template: </p>
    <select name="pcode" size="5">
      {% for key,value in PROFILES.iteritems() %}<option value="{{ key }}">{{ value }}</option>{% endfor %}
    </select>
    <HR>
    <p style="background-color:LightGrey">Redirect from http to https: </p>
      <input type="radio" name="redirecttossl" value="1" {% if REDIRECTTOSSL %}checked{% endif %}/> Yes
      <input type="radio" name="redirecttossl" value="0" {% if not REDIRECTTOSSL %}checked{% endif %}/> No
    <HR>
    <p style="background-color:LightGrey">Use http2 instead of just ssl: </p>
      <input type="radio" name="http2" value="1" {% if HTTP2 %}checked{% endif %}/> Yes
      <input type="radio" name="http2" value="0" {% if not HTTP2 %}checked{% endif %}/> No
    <HR>
    <p style="background-color:LightGrey">Use nginx test robot: </p>
      <input type="radio" name="testcookie" value="1" {% if TESTCOOKIE %}checked{% endif %}/> ENABLE
      <input type="radio" name="testcookie" value="0" {% if not TESTCOOKIE %}checked{% endif %}/> DISABLE
    <HR>
    
    <input style="display:none" name="domain" value="{{ DOMAIN }}">
    <input style="display:none" name="backend" value="{{ BACKEND }}">
    <input type="submit" value="GENERATE">
  </form>
</body>
</html>
 
