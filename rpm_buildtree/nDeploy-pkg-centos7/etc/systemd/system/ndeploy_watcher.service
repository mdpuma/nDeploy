[Unit]
Description=nDeploy Watcher
After=network.target remote-fs.target nss-lookup.target
 
[Service]
Type=forking
ExecStart=/opt/nDeploy/scripts/watcher.py start
ExecStop=/opt/nDeploy/scripts/watcher.py stop
User=root
Group=root
Restart=always
RestartSec=2
TimeoutSec=30
StandardOutput=tty
RemainAfterExit=yes
 
[Install]
WantedBy=multi-user.target
